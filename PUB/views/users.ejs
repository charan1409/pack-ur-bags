<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user details</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <style>
        table,
        th,
        td {
            border: 2px solid rgb(16, 107, 6);
            border-collapse: collapse;
            width: 1200px;
            height: 50px;
            text-align: center;
        }

        table {
            margin-left: auto;
            margin-right: auto;
        }

        th {
            font-size: 20px;
        }

        td {
            width: 500px;
            height: 50px;
            font-size: 15px;
            text-transform: none;
        }

        .btn {
            background-color: red;
            color: black;
            height: 45px;
            width: 40px;
        }
        i{
            color: whitesmoke;
        }
        img{
            width: 40px;
            height: 40px;
        }
        h1{
            text-align: center;
            font-size: 50px;
        }
    </style>
</head>

<body>
    <header class="topnav" id="topnavbar">
        <div class="linkrow">
            <button class="nav-toggler"><span></span></button>
            <label class="logo"><a href="/admins/adminland" class="logo"><span>P</span>ACK <span>U</span>R
                    <span>B</span>AGS</a></label>
            <div class="links">
                <ul>
                    <li><a href="/admins/adminland">Home</a></li>
                </ul>
            </div>
    </header><br><br>
    <h1>users list</h1>
    <% if(model) {%>
    <table>
        <tr>
            <th>name</th>
            <th>username</th>
            <th>email</th>
            <th>phone number</th>
            <th>gender</th>
            <th>profile photo</th>
            <th>REMOVE USER</th>
        </tr>
        <% for(const i of model) {%>
            <tr>
                <td>
                    <%- i. name %>
                </td>
                <td>
                    <%- i. username %>
                </td>
                <td>
                    <%- i. email %>
                </td>
                <td>
                    <%- i. phone %>
                </td>
                <td>
                    <%- i. gender %>
                </td>
                <td>
                    <% if(user.image){ %>
                        <img src="/uploads/<%= user.image%>" alt="profile_image">
                        <%}
                    %>
                    <% if(!user.image){ %>
                        <img src="/img/images/profile_pic.jpeg" alt="profile picture">
                        <%}
                    %>
                </td>
                <td><a href="/admins/remove/<%= i.username%>/<%= user.username%>"><button class="btn"><i class="bi bi-trash"></i></button></a></td>
            </tr>
            <%}%>
        <%} %>
    </table>
</body>

</html>