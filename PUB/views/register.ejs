<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>register</title>
  <!-- Custom CSS Link... -->
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/login.css">
  <link rel="icon" href="/img/images/fav1.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

  <!-- FAVICON  -->
  <link rel="icon" href="/img/images/fav1.png">
</head>

<body>
    <div class="topnav">
      <h2 class="logo"><span>P</span>ACK <span>U</span>R <span>B</span>AGS</h2>
    </div>
    
    <div id="log" class="form-container">
      <div class="top-btn">
        <h1>Sign Up</h1>
      </div>
      <!-- Error Alert -->
      <% if(locals.errors !=null) {%>
        <% errors.forEach(function(error) { %>
          <div class="alert alert-danger fade show log-alert">
            <strong>Error!</strong>
            <%= error.msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
          <% }); %>
            <% } %>
              <form id="register" onsubmit="" method="post" action="/users/register">
                <div class="input-box">
                  <i class="fa fa-user fa-2x" style="color: #fac102;"></i>
                  <input type="text" class="box" id="sname" name="upname" placeholder="Username" required>
                  <i class="fa fa-squarespace fa-2x"></i>
                </div><br>
                <div class="input-box">
                  <i class="fa fa-envelope fa-2x" style="color: #fac102;"></i>
                  <input type="text" class="box" id="smail" name="upemail" placeholder="Email" required>
                  <i class="fa fa-squarespace fa-2x"></i>
                </div> <br>
                <div class="input-box">
                  <i class="fa fa-key fa-2x" style="color: #fac102;"></i>
                  <input type="password" class="box" id="pas" name="uppass1"
                    placeholder="Password must be atleast 6 characters" required>
                    <i class="fa fa-eye fa-2x" id="show-pass" style="cursor: pointer;"></i>
                </div><br>
                <div class="input-box">
                  <i class="fa fa-key fa-2x" style="color: #fac102;"></i>
                  <input type="password" class="box" id="pas2" name="uppass2" 
                   placeholder="Confirm your password" required>
                  <i class="fa fa-eye fa-2x" id="show-pass2" style="cursor: pointer;"></i>
                </div> <br>
                <button type="submit" id="reg" class="login-btn">Sign Up</button> <br>

                <p>Have an account already?</p>
                <a href="/login"><button type="button" class="login-btn">Sign In</button></a>
              </form>
    </div>

  <script src="/js/login.js">
  </script>
</body>

</html>