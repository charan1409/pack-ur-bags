<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/profile.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <!-- FAVICON  -->
    <link rel="icon" href="/img/images/fav1.png">

    <style>
        .modal-bg{
            height: 100vh;
            width: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            top: 0;
            left: 0;
            position: fixed;
            display: flex;
            justify-content: center;
            align-items: center;
            visibility: hidden;
            opacity: 0;
            transition: visibilty 0s, opacity 0.5s;
        }

        .bg-active{
            visibility: visible;
            opacity: 1;
        }

        .modal-bg .edit-form{
            position: relative;
            background-color: #fff;
            height: 55%;
            width: 40%;
            align-items: center;
            margin: 0;
            padding: 0;
        }

        .modal-bg .edit-form span{
            position: absolute;
            display: flex;
            top: 0px;
            right: 0px;
            font-size: 20px;
            width: 60px;
            height: 40px;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            cursor: pointer;
        }

        .modal-bg .edit-form span:hover{
            background-color: rgba(255, 0, 0, 0.734);
            color: #fff;
        }

        .modal-bg .edit-form h2{
            text-align: center;
            font-size: 25px;
            font-weight: bold;
            margin-top: 10px;
        }

        .modal-bg .edit-form form{
            padding: 20px 30px;
        }

        .modal-bg .edit-form label{
            font-size: 18px;
            margin-top: 5px;
            text-transform: none;
        }

        .modal-bg .edit-form input{
            border:1px solid rgba(25, 19, 19, 0.764);
            border-radius: 10px;
            padding: 5px;
            font-size: 15px;
            text-transform: none;
        }
    </style>
</head>

<body>
    <!-- Header Section Starts here... -->
    <header class="topnav" id="topnavbar">
        <div class="linkrow">
            <button class="nav-toggler"><span></span></button>
            <label class="logo"><a href="/index/index" class="logo"><span>P</span>ACK <span>U</span>R
                    <span>B</span>AGS</a></label>
            <div class="links">
                <ul>
                    <li><a href="/index/index">Home</a></li>
                </ul>
            </div>
    </header>
    <!-- Header Section Ends here... -->
    <h1 style="font-size: 40px;">profile</h1>
    <% if(locals.edit !=null) {%>
        <% edit.forEach(function(error) { %>
          <div class="alert bg-success" id="msg">
            <%=error.msg2%>
          </div>
        <% }); %>
    <% } %>
    <% if(locals.change !=null) {%>
        <% change.forEach(function(error) { %>
          <div class="alert bg-success" id="msg">
            <%=error.msg2%>
          </div>
        <% }); %>   
    <% } %>
    <% if(locals.changep !=null) {%>
        <% changep.forEach(function(error) { %>
          <div class="alert bg-success" id="msg">
            <%=error.msg2%>
          </div>
        <% }); %>   
    <% } %>
    <% if(locals.removep !=null) {%>
        <% removep.forEach(function(error) { %>
          <div class="alert bg-success" id="msg">
            <%=error.msg2%>
          </div>
        <% }); %>   
    <% } %>
    <div class="profile">
        <div class="left">
            <div class="profile_img">
                <% if(user.image){ %>
                    <img src="/uploads/<%= user.image%>" alt="profile_image">
                    <%}
                %>
                <% if(!user.image){ %>
                    <img src="/img/images/profile_pic.jpeg" alt="profile picture">
                    <%}
                %>    
                <div class="content">
                    <i class="bi bi-trash fa-3x" onclick="location.href='/profile/remove'"></i>
                    <i class="bi bi-upload fa-3x" onclick="location.href='/profile/upload'"></i>
                </div>
            </div>
            <button class="prof-btn" onclick="review_rating()">edit profile</button>
        </div>
        <div class="right">
            <table>
                <tr>
                    <th width="10%">Name:</th>
                    <td>
                        <%=user.name%>
                    </td>
                </tr>
                <tr>
                    <th width="10%">username:</th>
                    <td>
                        <%=user.username%>
                    </td>
                </tr>
                <tr>
                    <th width="10%">Gender:</th>
                    <td>
                        <%=user.gender%>
                    </td>
                </tr>
                <tr>
                    <th width="10%">phone number:</th>
                    <td>
                        <%=user.phone%>
                    </td>
                </tr>
                <tr>
                    <th width="10%">Email:</th>
                    <td>
                        <%=user.email%>
                    </td>
                </tr>
            </table>
            <div class="btns">
                <button class="prof-btn" onclick="location.href='/profile/changepass'">change password</button>
                <button class="prof-btn" onclick="location.href='/logout'">logout</button>
            </div>
        </div>
    </div>

    <div class="modal-bg">
        <div class="edit-form">
            <h2>edit your profile</h2>
            <form action="/profile/edit" method="post" class="editform">
                <label for="username">Username:</label>
                <input type="text" class="tbox" name="username" placeholder="Enter your username" value="<%=user.username%>"><br><br><br>
                <label for="upname">Name: </label>
                <input type="text" class="tbox" name="upname" placeholder="Enter your name" value="<%=user.name%>"><br><br><br>
                <label for="upgender">Gender:</label>
                <% if(user.gender === 'male'){%> 
                    <input type="radio" name="upgender" id="male" value="male" checked>
                <%}%>
                <% if(user.gender != 'male'){%> 
                    <input type="radio" name="upgender" id="male" value="male">
                <%}%>
                <label for="male">male</label>
                <% if(user.gender === 'female'){%> 
                    <input type="radio" name="upgender" id="female" value="female" checked>
                <%}%>
                <% if(user.gender != 'female'){%> 
                    <input type="radio" name="upgender" id="female" value="female">
                <%}%>
                <label for="female">female</label><br><br><br>
                <label for="upphone">Phone number:</label>
                <input type="text" class="tbox" name="upphone" placeholder="Enter your phone number" value="<%=user.phone%>"><br><br><br>
                <a href="/profile/profile" class="cancelbtn">cancel</a>
                <button type="submit" class="btn" value="save changes">save changes</button>
            </form> 
            <span onclick="location.href='/profile/profile'">X</span>
        </div>
    </div>
    
    <script src="/js/navbar.js"></script>
    <script>
        function review_rating() {
            const modalBg = document.querySelector(".modal-bg");
            modalBg.classList.toggle("bg-active")
        }
    </script>
</body>

</html>