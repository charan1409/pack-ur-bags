        <!-- Home Section Starts... -->
        <div class="home" id="home">
            <div class="content">
                <% if(user.name !=null) {%>
                    <h3>Welcome <%=user.name %> !</h3>
                    <% } else{%>
                        <h3>Welcome <%=user.username %> !</h3>
                        <%} %>
                        <h3>travelling is worthwhile</h3>
                        <p>discover new places with us, adventure awaits</p>
                        <a href="#gallery" class="btn">discover more</a>
            </div>
            <div class="video-container">
                <video src="/img/images/vid-1.mp4" loop autoplay muted></video>
            </div>
        </div>
        <!-- Home Section Ends... -->

        <!-- gallery section starts here -->

        <section class="gallery" id="gallery">
            <h1 class="heading">
                <span>g</span>
                <span>a</span>
                <span>l</span>
                <span>l</span>
                <span>e</span>
                <span>r</span>
                <span>y</span>

            </h1>

            <div class="box-container">

                <div class="box" data-aos="zoom-in">
                    <img src="/img/images/pack_img/1.jpeg" alt="">
                    <div class="content">
                        <h3>Goa</h3>
                        <p>The top sightseeing places in Goa are Calangute Beach, Basilica of Bom Jesus and more...</p>
                    </div>
                </div>
                <div class="box" data-aos="zoom-in">
                    <img src="/img/images/pack_img/3.jpeg" alt="">
                    <div class="content">
