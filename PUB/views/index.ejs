        <section class="cont" id="cont">

            <!-- CONTACT US -->
            <div class="contact_us_cls" id="contact_us">

                <div class="structure">
                    <div class="structure_1" id="cont_id">
                        <form action="/index/con/<%=user.username%>" method="post">
                            <label style="font-size: 17px;" name="fname">First Name <span
                                    class="star">*</span></label><br>
                            <br>

                            <input type="text" name="fname" style="margin-right: 10px; width: 400px"
                                required="required"><br>

                            <label style="font-size: 17px;" name="lname">Last Name <span
                                    class="star">*</span></label><br><br>

                            <input type="text" name="lname" style="width: 400px" required="required"><br>

                            <label style="font-size: 17px;" name="mail">Email <span
                                    class="star">*</span></label><br><br>
                            <input type="email" name="mail" style="width: 500px" required="required"><br>

                            <label style="font-size: 17px;" name="msg">Message <span
                                    class="star">*</span></label><br><br>
                            <input type="text" name="msg" style="width: 100%" required="required"><br>
                            <label style="font-size: 17px;" name="adddet">Additional Details</label><br><br>
                            <textarea name="addtional"></textarea><br>
                            <button type="submit" id="fsubmit" style="font-size: 20px;">Send Message</button>
                        </form>
                    </div>
                </div>

        </section>


        <!-- FEEDBACK -->
        <div class="fd_bk" id="">
            <span>Give Feedback</span>
            <div class="shortdesc2">
                <p>Please share your valuable feedback to us</p>
            </div>
        </div>

        <div class="feed_box">
            <div class="feed">
                <form action="/index/fd" method="post">
                    <label>Feedback</label><br><br>
                    <textarea name="details" style="text-transform: none;"></textarea><br>
                    <button type="submit" id="fsubmit" style="font-size: 20px;">Submit feedback</button>
                </form>
            </div>
        </div>

