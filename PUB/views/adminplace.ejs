<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>places</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">

    <style>
        body{
            margin-top: 100px;
        }
        a{
            text-decoration-line: none;
        }

        table,
        th,
        td {
            border: 2px solid rgb(16, 107, 6);
            border-collapse: collapse;
            width: 1200px;
            height: 50px;
            text-align: center;
        }

        table {
            margin-left: auto;
            margin-right: auto;
        }

        th {
            font-size: 20px;
        }

        td {
            width: 500px;
            height: 50px;
            font-size: 15px;
            text-transform: none;
        }

        .btn {
            background-color: red;
            color: black;
            height: 45px;
            width: 40px;
        }
        i{
            color: whitesmoke;
        }
        img{
            width: 40px;
            height: 40px;
        }

        
        p{
            text-align: center;
            font-size: 20px;
        }

        .adminbtn{
            margin-left: 150px;
            margin-top: 4px;
            margin-bottom: 10px;
            width: 190px;
            height: 40px;
            border-radius: 20px;
            background-color: #fac102;
            color: white;
            cursor: pointer;
            padding: 5px;
            font-weight: 800;
            font-size: 20px;
            border: none;
        }

        .adminbtn:hover{
            border: 2px solid #fac102;
            background: none;
            color: #fac102;
        }
        
        a{
            color: whitesmoke;
            text-align: center;
            display: inline-block;
        }
        
        a:hover{
            color: #fac102;
        }
        h2{
            text-align: center;
            font-size: 50px;
        }
        </style>
</head>
<body>
    <div class="topnav">
        <div id="menu-bar" class="fas fa-bars"></div>
    
        <a href="/admins/adminland/<%=locals.user.username%>" class="logo"><span>P</span>ACK <span>U</span>R <span>B</span>AGS</a>
        <nav class="navbar">
            <a href="/admins/adminland/<%=locals.user.username%>">Home</a>
        </nav>
    </div>
    <h2>Places</h2>
    <a href="/admins/addplace/<%=user.username%>" class="adminbtn">Add place</a>
    <% if(model) {%>
        <table>
            <tr>
                <th>name</th>
                <th>username</th>
                <th>email</th>
                <th>phone number</th>
                <th>gender</th>
                <th>profile photo</th>
                <th>REMOVE USER</th>
            </tr>
            <% for(const i of model) {%>
                <tr>
                    <td>
                        <%- i. name %>
                    </td>
                    <td>
                        <%- i. username %>
                    </td>
                    <td>
                        <%- i. email %>
                    </td>
                    <td>
                        <%- i. phone %>
                    </td>
                    <td>
                        <%- i. gender %>
                    </td>
                    <td>
                        <% if(user.image){ %>
                            <img src="/uploads/<%= user.image%>" alt="profile_image">
                            <%}
                        %>
                        <% if(!user.image){ %>
                            <img src="/img/images/profile_pic.jpeg" alt="profile picture">
                            <%}
                        %>
                    </td>
                    <td><a href="/admins/remove/<%= i.username%>/<%= user.username%>"><button class="btn"><i class="bi bi-trash"></i></button></a></td>
                </tr>
                <%}%>
            <%} %>
        </table>
</body>
</html>